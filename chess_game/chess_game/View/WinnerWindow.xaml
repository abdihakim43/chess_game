<Window x:Class="chess_game.View.WinnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <!-- Winner Message -->
        <TextBlock x:Name="WinnerMessage" 
                   Text="Winner: " 
                   FontSize="20" 
                   FontWeight="SemiBold" 
                   Foreground="#FF4CAF50" 
                   TextAlignment="Center" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Padding="10" />
    </Grid>
</Window>
