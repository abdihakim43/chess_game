<Window x:Class="chess_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Board" Height="600" Width="600">
    <Grid Name="boardGrid" PreviewMouseLeftButtonDown="BoardGrid_Click">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>





        <Border Grid.Row="1" Grid.Column="1" Background="#B88B4A">
            <Grid>
                <!-- Number at the top-left -->
                <TextBlock Text="8" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
                <!-- Letter at the top-right -->
                <TextBlock Text="a" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" Background="#E3C16F">
            <Grid>
                <TextBlock Text="b" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="right" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="3" Background="#B88B4A">
            <Grid>
                <TextBlock Text="c" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="right" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="4" Background="#E3C16F">
            <Grid>
                <TextBlock Text="d" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="right" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="5" Background="#B88B4A">
            <Grid>
                <TextBlock Text="e" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="right" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="6" Background="#E3C16F">
            <Grid>
                <TextBlock Text="f" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="right" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="7" Background="#B88B4A">
            <Grid>
                <TextBlock Text="g" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="right" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="8" Background="#E3C16F">
            <Grid>
                <TextBlock Text="h" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="right" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" Background="#E3C16F">
            <Grid>
                <TextBlock Text="7" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="2" Grid.Column="2" Background="#B88B4A"/>
        <Border Grid.Row="2" Grid.Column="3" Background="#E3C16F"/>
        <Border Grid.Row="2" Grid.Column="4" Background="#B88B4A"/>
        <Border Grid.Row="2" Grid.Column="5" Background="#E3C16F"/>
        <Border Grid.Row="2" Grid.Column="6" Background="#B88B4A"/>
        <Border Grid.Row="2" Grid.Column="7" Background="#E3C16F"/>
        <Border Grid.Row="2" Grid.Column="8" Background="#B88B4A"/>

        <Border Grid.Row="3" Grid.Column="1" Background="#B88B4A">
            <Grid>
                <TextBlock Text="6" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="3" Grid.Column="2" Background="#E3C16F"/>
        <Border Grid.Row="3" Grid.Column="3" Background="#B88B4A"/>
        <Border Grid.Row="3" Grid.Column="4" Background="#E3C16F"/>
        <Border Grid.Row="3" Grid.Column="5" Background="#B88B4A"/>
        <Border Grid.Row="3" Grid.Column="6" Background="#E3C16F"/>
        <Border Grid.Row="3" Grid.Column="7" Background="#B88B4A"/>
        <Border Grid.Row="3" Grid.Column="8" Background="#E3C16F"/>

        <Border Grid.Row="4" Grid.Column="1" Background="#E3C16F">
            <Grid>
                <TextBlock Text="5" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="4" Grid.Column="2" Background="#B88B4A"/>
        <Border Grid.Row="4" Grid.Column="3" Background="#E3C16F"/>
        <Border Grid.Row="4" Grid.Column="4" Background="#B88B4A"/>
        <Border Grid.Row="4" Grid.Column="5" Background="#E3C16F"/>
        <Border Grid.Row="4" Grid.Column="6" Background="#B88B4A"/>
        <Border Grid.Row="4" Grid.Column="7" Background="#E3C16F"/>
        <Border Grid.Row="4" Grid.Column="8" Background="#B88B4A"/>

        <Border Grid.Row="5" Grid.Column="1" Background="#B88B4A">
            <Grid>
                <TextBlock Text="4" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="5" Grid.Column="2" Background="#E3C16F"/>
        <Border Grid.Row="5" Grid.Column="3" Background="#B88B4A"/>
        <Border Grid.Row="5" Grid.Column="4" Background="#E3C16F"/>
        <Border Grid.Row="5" Grid.Column="5" Background="#B88B4A"/>
        <Border Grid.Row="5" Grid.Column="6" Background="#E3C16F"/>
        <Border Grid.Row="5" Grid.Column="7" Background="#B88B4A"/>
        <Border Grid.Row="5" Grid.Column="8" Background="#E3C16F"/>

        <Border Grid.Row="6" Grid.Column="1" Background="#E3C16F">
            <Grid>
                <TextBlock Text="3" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="6" Grid.Column="2" Background="#B88B4A"/>
        <Border Grid.Row="6" Grid.Column="3" Background="#E3C16F"/>
        <Border Grid.Row="6" Grid.Column="4" Background="#B88B4A"/>
        <Border Grid.Row="6" Grid.Column="5" Background="#E3C16F"/>
        <Border Grid.Row="6" Grid.Column="6" Background="#B88B4A"/>
        <Border Grid.Row="6" Grid.Column="7" Background="#E3C16F"/>
        <Border Grid.Row="6" Grid.Column="8" Background="#B88B4A"/>

        <Border Grid.Row="7" Grid.Column="1" Background="#B88B4A">
            <Grid>
                <TextBlock Text="2" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="7" Grid.Column="2" Background="#E3C16F"/>
        <Border Grid.Row="7" Grid.Column="3" Background="#B88B4A"/>
        <Border Grid.Row="7" Grid.Column="4" Background="#E3C16F"/>
        <Border Grid.Row="7" Grid.Column="5" Background="#B88B4A"/>
        <Border Grid.Row="7" Grid.Column="6" Background="#E3C16F"/>
        <Border Grid.Row="7" Grid.Column="7" Background="#B88B4A"/>
        <Border Grid.Row="7" Grid.Column="8" Background="#E3C16F"/>

        <Border Grid.Row="8" Grid.Column="1" Background="#E3C16F">
            <Grid>
                <TextBlock Text="1" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
            </Grid>
        </Border>
        <Border Grid.Row="8" Grid.Column="2" Background="#B88B4A"/>
        <Border Grid.Row="8" Grid.Column="3" Background="#E3C16F"/>
        <Border Grid.Row="8" Grid.Column="4" Background="#B88B4A"/>
        <Border Grid.Row="8" Grid.Column="5" Background="#E3C16F"/>
        <Border Grid.Row="8" Grid.Column="6" Background="#B88B4A"/>
        <Border Grid.Row="8" Grid.Column="7" Background="#E3C16F"/>
        <Border Grid.Row="8" Grid.Column="8" Background="#B88B4A"/>
    </Grid>
</Window>
